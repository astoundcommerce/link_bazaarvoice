    <job job-id="Bazaarvoice Inline Ratings Import" priority="0">
        <description/>
        <parameters/>
        <split sequential="false">
            <flow>
                <context site-id="RefArch"/>
                <template-ref template-id="template_704"/>
            </flow>
            <flow>
                <context site-id="SiteGenesis"/>
                <template-ref template-id="template_704"/>
            </flow>
            <flow-template template-id="template_704">
                <step step-id="Download Rating Feed" type="custom.Bazaarvoice-Download" enforce-restart="false">
                    <description/>
                    <parameters>
                        <parameter name="Enabled">true</parameter>
                    </parameters>
                </step>
            </flow-template>
        </split>
        <split sequential="false">
            <flow>
                <context site-id="RefArch"/>
                <template-ref template-id="template_61"/>
            </flow>
            <flow>
                <context site-id="SiteGenesis"/>
                <template-ref template-id="template_61"/>
            </flow>
            <flow-template template-id="template_61">
                <step step-id="Import Ratings" type="custom.Bazaarvoice-Rating-Import" enforce-restart="false">
                    <description/>
                    <parameters>
                        <parameter name="Enabled">true</parameter>
                    </parameters>
                    <rules>
                        <on-exit status="ERROR">
                            <stop-job/>
                        </on-exit>
                    </rules>
                </step>
            </flow-template>
        </split>
        <rules>
            <on-running runtime-threshold="60m" enabled="true">
