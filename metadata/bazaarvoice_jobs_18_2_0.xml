                    <to>jobadmin@yourdomain.com</to>
				</send-mail>
            </on-exit>
        </rules>
        <triggers>
            <run-once enabled="true">
                <date>2018-11-18Z</date>
                <time>01:40:33.000Z</time>
            </run-once>
        </triggers>
    </job>

