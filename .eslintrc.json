{
    "root": true,
    "extends": "airbnb-base/legacy",
    "rules": {
        "linebreak-style": 0,
        "no-restricted-syntax": "off",
        "guard-for-in": "off",
        "no-lonely-if": "off",
        "block-scoped-var": "off",
        "import/no-unresolved": "off",
        "indent": ["error", 4, { "SwitchCase": 1, "VariableDeclarator": 1 }],
        "func-names": "off",
        "require-jsdoc": "error",
        "valid-jsdoc": [
            "error",
            {
                "preferType": {
                    "Boolean": "boolean",
                    "Number": "number",
                    "object": "Object",
                    "String": "string"
                },
                "requireReturn": false
            }
        ],
        "vars-on-top": "off",
        "global-require": "off",
        "no-shadow": ["error", { "allow": ["err", "callback"] }],
        "max-len": "off"
    },
    "globals": {
        "request": true,
        "session": true,
        "dw": true,
        "empty": true
    },
    "env": {
        "jquery": true
    }   
}
